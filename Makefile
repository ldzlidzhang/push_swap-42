NAME		= 	push_swap

CC 			=	cc

FLAGS 		=	-Wall -Wextra -Werror -I./includes/push_swap.h

SRC			=	./operation/*.c \
				./utility/*.c \
				./sorting/*.c \
				./main.c

OBJS		=	${SRC:.c=.o}

RM			=	/bin/rm -f

# =============================================================================
#	Processing files
# =============================================================================
$(NAME):
	$(CC) $(FLAGS) $(SRC) -o $(NAME)

# =============================================================================
#	RULES
# =============================================================================

all: $(NAME)

clean:
	$(RM) $(OBJS)

fclean: clean 
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re 
